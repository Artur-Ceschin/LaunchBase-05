{% extends "first-layout.njk"%}

{% block header %}
    <header class="container-header">
        <div class="img">
            <a href="/"><img src="/assets/logo1.png" alt="Logo"></a>
        </div>
        <a href="/starter/about">Sobre</a>
        <a href="/starter/recipies" class="selected">Receitas</a>
    </header>
{% endblock %}

{% block content %}
    <main class="container-cards">

        <div class="cards">
            {% for item in items %}
                <div class="card">
                    <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                    <div class="card-text">
                        <h3 class="card-title">{{item.title}}</h3>
                        <p class="card-author">{{item.author}}</p>
                    </div>
                </div>

            {% endfor %}

        </div>
    </main>
    <br><br><br>
{% endblock %}
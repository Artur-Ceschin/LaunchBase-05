{% extends "first-layout.njk"%}

{% block content %}
    <main class="container-cards">
        <div class="main-element">
            <h2>Buscando por "{{filter}}"</h2>

            <div class="cards">

                {% for recipe in recipes %}

                    <div class="card">
                        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">

                        <h3 >{{recipe.title}}</h3>
                        <p>Por
                            {{recipe.chef_name}}</p>
                    </div>

                {% endfor %}

            </div>
        </div>
        <div class=" pagination-container">
            <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}"></div>
        </main>

    {% endblock content %}
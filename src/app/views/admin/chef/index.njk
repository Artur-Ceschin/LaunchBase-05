{% extends 'layout.njk' %}

{% block content %}
    <div class="info">
        <h2>Gerenciar Chefs</h1>

        <button>
            <a href="/admin/chef/create">Novo Chef</a>
        </button>
    </div>
    <div class="cards-chef">

        {% for chef in chefs %}
            <div class="card ">
                <img class="chef-img" src="{{ chef.avatar_url}}" alt="">
                <div class="text">
                    <p>{{chef.name}}</p>
                    <a href="/admin/chef/details/{{chef.id}}">Vizualizar</a>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock content %}
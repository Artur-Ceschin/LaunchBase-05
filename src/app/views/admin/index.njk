{% extends 'layout.njk' %}

{% block content %}
    <div class="info">
        <h2>Gerenciar receitas</h1>

        <button>
            <a href="/admin/create">Nova receita</a>
        </button>
    </div>
    <div class="cards">

        {% for recipie in recipes %}
            <div class="card">
                <img src="{{ recipie.image}}" alt="">
                <div class="text">
                    <p>{{recipie.title}}</p>
                    <p>{{recipie.author}}</p>
                    <a href="/admin/details/{{recipie.id}}">Vizualizar</a>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock content %}
{% extends "first-layout.njk"%}

{% block content %}
    <main class="container-cards">
        <h2>Buscando por "{{filter}}"</h2>

        <div class="cards">

            {% for recipe in recipes %}

                <div class="card">
                    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">

                    <h3 >{{recipe.title}}</h3>
                    <p>Por {{recipe.chef_name}}</p>

                </div>

            {% endfor %}

        </div>
    </main>
{% endblock content %}